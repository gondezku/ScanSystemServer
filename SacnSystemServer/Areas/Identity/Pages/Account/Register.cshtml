                                        <input asp-for="Input.Email" class="did-floating-input" autocomplete="username" aria-required="true" placeholder="" />
                                        <label asp-for="Input.Email" class="did-floating-label" style="background: #27293d;">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger" style="font-size:10px;"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 px-md-1">
                                    <div class="row mx-0">
                                        <div class="col-md-6" style="padding-left:0px;padding-right:2px">
                                            <div class="did-floating-label-content">
                                                <input asp-for="Input.Password" class="did-floating-input" autocomplete="new-password" aria-required="true" placeholder="" />
                                                <label asp-for="Input.Password" class="did-floating-label" style="background: #27293d;">Password</label>
                                                <span asp-validation-for="Input.Password" class="text-danger" style="font-size:10px;"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6" style="padding-left:0px;padding-right:2px">
                                            <div class="did-floating-label-content">
