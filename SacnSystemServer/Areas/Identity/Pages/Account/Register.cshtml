            <div class="col-md-7 offset-md-3 pt-5">
                <div class="card" style="max-height:fit-content">
                    <div class="card-header text-center py-2">
                        <h4 class="title mb-1">
                            @ViewData["Title"]
                        </h4>
                        <h6 class="card-category">
                            <span>
                                Create a new account.
                            </span>
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        </h6>
                    </div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="card-body px-5 pb-0">
                            <div class="row">
                                <div class="col-md-12 px-md-1">
                                    <div class="did-floating-label-content">
                                        <input asp-for="Input.Name" class="did-floating-input" autocomplete="username" aria-required="true" placeholder="" />
